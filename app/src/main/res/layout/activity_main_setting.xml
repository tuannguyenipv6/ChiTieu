<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/mToolbarSetting"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        app:layout_collapseMode="pin"
        android:theme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="#0C2EEA"
        android:fontFamily="sans-serif-medium"
        android:text="Hiệu ứng hiện danh sách"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#3F51B5"
            android:id="@+id/Setting_TrenSuong"
            android:textSize="10sp"
            android:onClick="OnclickSetting"
            android:layout_height="wrap_content"
            android:text="Trên suống"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#3F51B5"
            android:onClick="OnclickSetting"
            android:textSize="10sp"
            android:id="@+id/Setting_DuoiLen"
            android:layout_height="wrap_content"
            android:text="Dưới lên"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#3F51B5"
            android:onClick="OnclickSetting"
            android:textSize="10sp"
            android:id="@+id/Setting_TraiQua"
            android:layout_height="wrap_content"
            android:text="Trái qua"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/Setting_PhaiQua"
            android:onClick="OnclickSetting"
            android:textSize="10sp"
            android:textColor="#3F51B5"
            android:layout_height="wrap_content"
            android:text="Phải qua"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DD000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="#0C2EEA"
        android:fontFamily="sans-serif-medium"
        android:text="Thay đổi ảnh nền"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_margin="30dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="6dp"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:id="@+id/mViewPagerSetting"
                android:background="#2431"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="28dp"
        android:layout_height="wrap_content">
        <me.relex.circleindicator.CircleIndicator
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#5C56F806"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/mCircle_indicatorSetting"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/CV_Setting"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thêm ảnh nền mới"
            android:gravity="center"
            android:padding="9dp"
            android:background="@drawable/onclick_nen_xanh"
            android:id="@+id/Setting_ThemAnh"
            android:onClick="OnclickSetting"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Xóa ảnh nền"
            android:gravity="center"
            android:id="@+id/Setting_XoaAnh"
            android:padding="9dp"
            android:onClick="OnclickSetting"
            android:background="@drawable/onclick_nen_xanh"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DD000000"/>
</LinearLayout>